<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/bgLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:orientation="vertical"
        android:background="@color/transparent">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_dialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/popup_bg"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

<!--            <com.app.ace.ui.views.AnyTextView
                android:id="@+id/txtHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/x20"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:gravity="center"
                android:text="@string/dialog_title"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x23"
                android:textStyle="normal"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:id="@+id/txt_line"
                android:layout_below="@+id/txtHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x3"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginLeft="@dimen/x20"
                android:layout_marginRight="@dimen/x20"
                android:alpha="0.6"
                android:background="@drawable/text"/>-->

            <LinearLayout
                android:id="@+id/textLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/txt_line"
                android:gravity="center"
                android:orientation="vertical">

                <com.app.ace.ui.views.AnyTextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x15"
                    android:gravity="center"
                    android:text="@string/user_delete_message"
                    android:textColor="@color/dark_grey"
                    android:visibility="visible"
                    android:textSize="@dimen/x22"
                    android:alpha="0.7"
                    app:typeface="Roboto-Regular.ttf" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/x5"
                    android:layout_marginBottom="@dimen/x10"
                    android:layout_alignBottom="@+id/textLayout">

                    <Button
                        android:id="@+id/btnDeleteOk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x15"

                        android:visibility="visible"
                        android:background="@drawable/ok_btn"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x16"
                        android:text="@string/ok" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>