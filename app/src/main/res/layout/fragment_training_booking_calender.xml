<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/ll_mainFrameTraingBookingCalender"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/ll_calender"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x32"
            android:background="@color/darkbrown"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/sp_month"
                android:layout_width="@dimen/x100"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:alpha="0.8"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="@dimen/x5"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_traingBookingCalender_listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                >


                <com.app.ace.ui.views.AnyTextView
                    android:id="@+id/avail"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:text="Availablity"
                    android:gravity="center|center_vertical|center_horizontal"
                    app:typeface="Roboto-Regular.ttf"
                    android:layout_marginLeft="@dimen/x120"
                    android:layout_marginRight="@dimen/x5"
                    android:layout_marginTop="@dimen/x10"
                    android:textColor="@color/colorPrimary"
                    />



            </LinearLayout>
        </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <NumberPicker
                    android:id="@+id/numberPicker1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/x200"
                    android:gravity="center_vertical"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_ok"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/cancel_btn"
                    android:layout_marginTop="@dimen/x350"
                    android:visibility="gone"
                    android:text="OK"/>

                <LinearLayout
                    android:id="@+id/SecondAvail"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/firstAvail"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:alpha="0.6"
                    android:background="@drawable/text"/>

                    <LinearLayout
                        android:id="@+id/SecondAvailchild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">


                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/txtDayDate1"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="2"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text="Fri 7"
                            app:typeface="Roboto-Regular.ttf"

                            />



                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:alpha="0.6"
                            android:background="@drawable/text" />



                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/SndtxtTo"
                            android:layout_width="@dimen/x75"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="2"
                            android:background="@drawable/background_day_hover"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text=""
                            app:typeface="Roboto-Regular.ttf"

                            />

                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/Sndtxtcenter"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5"
                            android:layout_marginRight="@dimen/x5"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="4"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text="to"
                            app:typeface="Roboto-Regular.ttf"

                            />

                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/SndtxtFrom"
                            android:layout_width="@dimen/x75"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="2"
                            android:background="@drawable/background_day_hover"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text=""
                            app:typeface="Roboto-Regular.ttf"


                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:alpha="0.6"
                            android:background="@drawable/text" />

                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/SndtxtIncre"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x10"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="0.5"
                            android:background="@drawable/addinc"
                            android:gravity="center|center_vertical|center_horizontal"
                            app:typeface="Roboto-Regular.ttf" />


                    </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:alpha="0.6"
                    android:layout_below="@+id/firstAvailchild"
                    android:background="@drawable/text"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/firstAvail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:alpha="0.6"
                        android:background="@drawable/text"/>

                    <LinearLayout
                        android:id="@+id/firstAvailchild"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="10">


                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/txtDayDate"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="2"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text="Fri 7"
                            app:typeface="Roboto-Regular.ttf"

                            />



                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:alpha="0.6"
                            android:background="@drawable/text" />



                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/txtTo"
                            android:layout_width="@dimen/x75"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="2"
                            android:background="@drawable/background_day_hover"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text=""
                            app:typeface="Roboto-Regular.ttf"

                            />

                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/txtcenter"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x5"
                            android:layout_marginRight="@dimen/x5"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="4"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text="to"
                            app:typeface="Roboto-Regular.ttf"

                            />

                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/txtFrom"
                            android:layout_width="@dimen/x75"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x15"
                            android:layout_marginRight="@dimen/x15"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="2"
                            android:background="@drawable/background_day_hover"
                            android:gravity="center|center_vertical|center_horizontal"
                            android:text=""
                            app:typeface="Roboto-Regular.ttf"


                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:alpha="0.6"
                            android:background="@drawable/text" />

                        <com.app.ace.ui.views.AnyTextView
                            android:id="@+id/txtIncre"
                            android:layout_width="20dp"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/x10"
                            android:layout_marginLeft="@dimen/x10"
                            android:layout_marginRight="@dimen/x10"
                            android:layout_marginTop="@dimen/x10"
                            android:layout_weight="0.5"
                            android:background="@drawable/addinc"
                            android:gravity="center|center_vertical|center_horizontal"
                            app:typeface="Roboto-Regular.ttf" />


                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="0.5dp"
                        android:alpha="0.6"
                        android:layout_below="@+id/firstAvailchild"
                        android:background="@drawable/text"/>

                </LinearLayout>








               <!-- <ListView
                    android:id="@+id/lv_trainingBokingCalender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x17"
                    android:visibility="visible">

                </ListView>-->


                <View
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/x1"
                    android:alpha="0.2"
                    android:background="@drawable/text" />
            </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:weightSum="3">


        <ImageView
            android:id="@+id/iv_Calander"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/x15"
            android:src="@drawable/calendar"
            android:gravity="center_vertical"
            />



        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/x15"
            android:src="@drawable/profile"
            android:gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/iv_Home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/x15"
            android:src="@drawable/home_icon"
            android:gravity="center_vertical"
            />

    </LinearLayout>


</LinearLayout>
