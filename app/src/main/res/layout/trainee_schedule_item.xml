<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txt_traineeSchedule_1stColumn"
            android:layout_width="180dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/x16"
            android:text="Dates Schedule"
            android:gravity="center|center_vertical|center_horizontal"
            app:typeface="Roboto-Regular.ttf"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text"/>

        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txt_traineeSchedule_2stColumn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/x16"
            android:text="10 May - 23 May"
            android:gravity="center|center_vertical|center_horizontal"
            app:typeface="Roboto-Regular.ttf"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txt_traineeSchedule_timeslot"
            android:layout_width="180dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/x16"
            android:text="Dates Schedule"
            android:gravity="center|center_vertical|center_horizontal"
            app:typeface="Roboto-Regular.ttf"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text"/>

        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txt_traineeSchedule_timeslot2stColumn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/x16"
            android:text="10 May - 23 May"
            android:gravity="center|center_vertical|center_horizontal"
            app:typeface="Roboto-Regular.ttf"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txt_traineeSchedule_training"
            android:layout_width="180dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="@dimen/x16"
            android:text="Dates Schedule"
            android:gravity="center|center_vertical|center_horizontal"
            app:typeface="Roboto-Regular.ttf"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:alpha="0.6"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/text"/>

        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txt_traineeSchedule_training2stColumn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/x16"
            android:text="10 May - 23 May"
            android:gravity="center|center_vertical|center_horizontal"
            app:typeface="Roboto-Regular.ttf"/>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x1"
        android:alpha="0.6"
        android:background="@drawable/text"/>
    <LinearLayout
        android:id="@+id/ll_btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:layout_marginTop="@dimen/x20"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_training_Cancle_Submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/x25"
            android:layout_marginRight="@dimen/x25"
            android:layout_marginTop="@dimen/x10"
            android:background="@drawable/next_bttn"
            android:gravity="center"
            android:text="@string/cancel_booking"
            android:textColor="@color/white"
            android:textSize="@dimen/x16" />

    </LinearLayout>
</LinearLayout>

