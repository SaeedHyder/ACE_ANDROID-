<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"

android:orientation="vertical">

<LinearLayout
    android:id="@+id/bgLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.6"
    android:orientation="vertical"
    android:background="@color/black">

</LinearLayout>

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">


    <RelativeLayout
        android:id="@+id/rl_dialog"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x350"
        android:background="@drawable/popup_bg"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txtHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:gravity="center"
            android:text="Select"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/x23"
            android:textStyle="normal"
            app:typeface="Roboto-Regular.ttf" />


        <View
            android:id="@+id/txt_line"
            android:layout_below="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginBottom="@dimen/x3"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:alpha="0.6"
            android:background="@drawable/text"/>

        <LinearLayout
            android:id="@+id/RR_Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:background="@drawable/search_box"
            android:layout_below="@+id/txt_line"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone">
            <ImageView
                android:id="@+id/iv_SearchIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginStart="@dimen/x15" />
            <com.app.ace.ui.views.AnyEditTextView
                android:id="@+id/tv_Search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/search"
                app:typeface="Roboto-Regular.ttf"
                android:maxLines="1"
                android:background="@null"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LL_ListView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x160"
            android:layout_below="@+id/RR_Search"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginBottom="@dimen/x10"
            android:layout_marginLeft="@dimen/x25"
            android:layout_marginRight="@dimen/x25"
            android:baselineAligned="false"
            android:weightSum="3">

            <ListView
                android:id="@+id/list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:id="@+id/linearLayout">

        </LinearLayout>

        <Button
            android:id="@+id/btn_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="20dp"
            android:background="@drawable/cancel_btn"
            android:clickable="true"
            android:text="Show" />

        <Button
            android:id="@+id/btn_show1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/linearLayout"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="20dp"
            android:background="@drawable/cancel_btn"
            android:clickable="true"
            android:text="Show"
            android:visibility="gone"/>
    </RelativeLayout>
</RelativeLayout>
</RelativeLayout>

