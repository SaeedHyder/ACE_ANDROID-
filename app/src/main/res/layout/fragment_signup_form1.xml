<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"

    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/parentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/x15"

        >


        <RelativeLayout
            android:id="@+id/multiImageLayout"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x100"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/upload_photo"/>



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fieldLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/x20"
            android:orientation="vertical">

            <com.app.ace.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginBottom="@dimen/x3"
                android:text="@string/first_name"
                android:textColor="@color/txtview_title_color"
                android:textSize="@dimen/x12"
                android:gravity="left"
                app:typeface="Roboto-Regular.ttf"
                />


            <com.app.ace.ui.views.AnyEditTextView
                android:id="@+id/edtFName"
                style="@style/form_edttext_fields_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:maxLength="50"
                app:emptyAllowed="false"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.6"
                android:background="@drawable/text"/>


            <com.app.ace.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginBottom="@dimen/x3"
                android:text="@string/last_name"
                android:textColor="@color/txtview_title_color"
                android:textSize="@dimen/x12"
                android:gravity="left"
                app:typeface="Roboto-Regular.ttf"
                />

            <com.app.ace.ui.views.AnyEditTextView
                android:id="@+id/edtLName"
                style="@style/form_edttext_fields_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:maxLength="50"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/dark_grey"
                app:emptyAllowed="false"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.6"
                android:background="@drawable/text"/>


            <com.app.ace.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginBottom="@dimen/x3"
                android:text="@string/email_address"
                android:textColor="@color/txtview_title_color"
                android:textSize="@dimen/x12"
                android:gravity="left"
                app:typeface="Roboto-Regular.ttf"
                />

            <com.app.ace.ui.views.AnyEditTextView
                android:id="@+id/edtEmail"
                style="@style/form_edttext_fields_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textWebEmailAddress"
                android:singleLine="true"
                app:testType="email"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.6"
                android:background="@drawable/text"/>

            <com.app.ace.ui.views.AnyTextView
                android:id="@+id/txtPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginBottom="@dimen/x3"
                android:text="@string/password"
                android:textColor="@color/txtview_title_color"
                android:textSize="@dimen/x12"
                android:gravity="left"
                app:typeface="Roboto-Regular.ttf"
                />

            <com.app.ace.ui.views.AnyEditTextView
                android:id="@+id/edtPassword"
                style="@style/form_edttext_fields_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword|textNoSuggestions"
                app:emptyAllowed="false"
                android:singleLine="true"
                android:maxLength="50"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:id="@+id/view_Password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.6"
                android:background="@drawable/text"/>

            <com.app.ace.ui.views.AnyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginBottom="@dimen/x3"
                android:text="@string/mobile_number"
                android:textColor="@color/txtview_title_color"
                android:textSize="@dimen/x12"
                android:gravity="left"
                app:typeface="Roboto-Regular.ttf"
                />

            <com.app.ace.ui.views.AnyEditTextView
                android:id="@+id/edtMobileNumber"
                style="@style/form_edttext_fields_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:maxLength="50"
                
                android:inputType="number|textNoSuggestions"
                app:emptyAllowed="false"
                android:textColorHint="@color/edittext_hint_color"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Regular.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x5"
                android:layout_marginRight="@dimen/x5"
                android:layout_marginTop="@dimen/x10"
                android:alpha="0.6"
                android:background="@drawable/text"/>


          <!--  <CheckBox
                android:id="@+id/checkShowPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x5"
                android:button="@drawable/signup_chkbox_selector"
                android:padding="@dimen/x7"
                android:text="@string/show_password"
                android:textColor="@color/white" />-->

            <LinearLayout
                android:id="@+id/buttonlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x15">

                    <Button
                        android:id="@+id/btnSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/x10"
                        android:background="@drawable/next_bttn_next"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x16"
                        android:text="@string/signup"

                        />

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/x10"
                        android:visibility="invisible"
                        android:background="@drawable/next_bttn_next"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/x16"
                        android:text="@string/next"

                        />


                </FrameLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</ScrollView>