<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header_layout"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/x50"
    android:background="@drawable/gradient_topbar">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txt_subHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Template"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            android:textStyle="bold"
            app:typeface="Roboto-Regular.ttf" />

        <com.app.ace.ui.views.AnyEditTextView
            android:id="@+id/edit_searchBarr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Search"
            android:paddingLeft="@dimen/x10"
            android:background="@drawable/text_box_map"
            android:visibility="gone"
            app:typeface="Roboto-Regular.ttf"/>

        <com.app.ace.ui.views.AnyTextView
            android:id="@+id/txt_subHead2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="headng2"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/x2"
            android:visibility="gone"
            android:textColor="@color/white"
            android:textSize="@dimen/x13"
            android:alpha="0.7"
            android:textStyle="normal"
            app:typeface="Roboto-Regular.ttf" />

    </LinearLayout>


    <ImageView
        android:id="@+id/btnLeft"
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:scaleType="centerInside"
        android:src="@drawable/back"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_marginRight="@dimen/x10"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerInside"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btnRight2"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/ic_launcher"
            android:layout_marginLeft="@dimen/x20"
            android:scaleType="centerInside"
            android:layout_toRightOf="@id/btnRight"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/btnRight3"
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:src="@drawable/ic_launcher"
            android:scaleType="centerInside"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/btnRight2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txtRight"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_toRightOf="@id/btnRight2"
            android:text="asdsd"
            android:textColor="@color/white"
            android:textSize="@dimen/x17"
            android:visibility="visible" />

    </RelativeLayout>

</RelativeLayout>