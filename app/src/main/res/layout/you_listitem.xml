<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/parenLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginBottom="@dimen/x3"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:src="@drawable/profile_pic"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.app.ace.ui.views.AnyTextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:text="@string/james_blunt"
                android:textColor="@color/black"
                android:textSize="@dimen/x14"
                app:typeface="Roboto-Bold.ttf" />

            <com.app.ace.ui.views.AnyTextView
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:gravity="start"
                android:alpha="0.7"
                android:text="17m"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x12"
                app:typeface="Roboto-Regular.ttf" />


        </LinearLayout>

            <com.app.ace.ui.views.AnyTextView
                android:id="@+id/txtUserDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:gravity="start"
                android:alpha="0.7"
                android:text="my_detail"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/x12"
                app:typeface="Roboto-Regular.ttf" />




        </LinearLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x3"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgYou"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x70"
        android:layout_marginLeft="@dimen/x60"
        android:gravity="start"
        android:src="@drawable/profile_pic"
        />
    <Button
        android:id="@+id/btn_follow"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x30"
        android:layout_marginLeft="@dimen/x60"
        android:background="@drawable/ok_btn"
        android:textColor="@color/white"
        android:visibility="gone"
        android:textSize="@dimen/x14"
        android:text="Follow"/>

    <Button
        android:id="@+id/btn_Unfollow"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x30"
        android:layout_marginLeft="@dimen/x60"
        android:background="@drawable/ok_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/x14"
        android:visibility="gone"
        android:text="UnFollow"/>

    </LinearLayout>

    <View
        android:id="@+id/txt_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginBottom="@dimen/x3"
        android:layout_marginTop="@dimen/x1"
        android:alpha="0.6"
        android:background="@drawable/text"/>


</LinearLayout>